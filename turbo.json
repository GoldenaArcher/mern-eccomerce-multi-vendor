{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },  
    "start": {
      "dependsOn": ["^start"],
      "inputs": ["src/**", "!dist/**", "package.json", "tsconfig.json"],
      "persistent": true,
      "cache": false
    },
    "start:debug": {
      "dependsOn": ["^start:debug"],
      "inputs": ["src/**", "!dist/**", "package.json", "tsconfig.json"],
      "persistent": true,
      "cache": false
    }
  }
}
